<world>
    <window width="512" height="512" />
    <camera>
        <position x="30" y="54" z="80" />
        <lookAt x="54" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="30" near="1" far="1000" />
    </camera>
    <group>
        <!-- Sun -->
        <group>
            <transform>
                <scale x="10.9" y="10.9" z="10.9"/> <!-- Sun's Size -->
                <!-- Animation: Rotate around its axis -->
                <rotate time="20" x="0" y="1" z="0" />
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Sun Model -->
            </models>
        </group>

        <!-- Mercury -->
        <group>
            <transform>
                <translate x="24" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="20" x="0" y="1" z="0" />
                <scale x="0.38" y="0.38" z="0.38"/> <!-- Mercury's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Mercury Model -->
            </models>
        </group>

        <!-- Venus -->
        <group>
            <transform>
                <translate x="40" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="15" x="0" y="1" z="0" />
                <scale x="0.95" y="0.95" z="0.95"/> <!-- Venus's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Venus Model -->
            </models>
        </group>

        <!-- Earth -->
        <group>
            <transform>
                <translate x="55" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="10" x="0" y="1" z="0" />
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Earth Model -->
            </models>

            <!-- Moon -->
            <group>
                <transform>
                    <translate x="5" y="0" z="0"/> <!-- Distance from Earth -->
                    <!-- Animation: Orbit around the Earth -->
                    <rotate time="5" x="0" y="1" z="0" />
                    <scale x="0.273" y="0.273" z="0.273"/> <!-- Moon's Size -->
                </transform>
                <models>
                    <model file="..\output\sphere.3d" /> <!-- Moon Model -->
                </models>
            </group>
        </group>

        <!-- Mars -->
        <group>
            <transform>
                <translate x="70" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="8" x="0" y="1" z="0" />
                <scale x="0.53" y="0.53" z="0.53"/> <!-- Mars's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Mars Model -->
            </models>
        </group>

        <!-- Jupiter -->
        <group>
            <transform>
                <translate x="105" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="5" x="0" y="1" z="0" />
                <scale x="11" y="11" z="11"/> <!-- Jupiter's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Jupiter Model -->
            </models>
        </group>

        <!-- Saturn -->
        <group>
            <transform>
                <translate x="134" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="3" x="0" y="1" z="0" />
                <scale x="9" y="9" z="9"/> <!-- Saturn's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Saturn Model -->
            </models>

            <!-- Saturn's Ring -->
            <group>
                <transform>
                    <rotate angle ="26.7" x="1" y="0" z="1"/> <!-- Rotation of the Ring -->
                    <scale x="0.15" y="0.15" z="0.15"/> <!-- Size of the Ring -->
                </transform>
                <models>
                    <model file="..\output\ring.3d" /> <!-- Saturn's Ring Model -->
                </models>
            </group>
        </group>

        <!-- Uranus -->
        <group>
            <transform>
                <translate x="153" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="2" x="0" y="1" z="0" />
                <scale x="4" y="4" z="4"/> <!-- Uranus's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Uranus Model -->
            </models>
        </group>

        <!-- Neptune -->
        <group>
            <transform>
                <translate x="168" y="0" z="0"/> <!-- Distance from Sun -->
                <!-- Animation: Orbit around the Sun -->
                <rotate time="1" x="0" y="1" z="0" />
                <scale x="3.86" y="3.86" z="3.86"/> <!-- Neptune's Size -->
            </transform>
            <models>
                <model file="..\output\sphere.3d" /> <!-- Neptune Model -->
            </models>
        </group>

        <!-- Comet -->
        <group>
            <transform>
                <translate time="30" align="true">
                    <point x="0" y="0" z="0" /> <!-- Starting Point of Comet -->
                    <point x="50" y="10" z="20" /> <!-- Middle Point of Comet's Path -->
                    <point x="100" y="0" z="0" /> <!-- Ending Point of Comet -->
                </translate>
                <!-- Animation: Move along the path -->
                <rotate time="10" x="0" y="1" z="0" /> <!-- Rotation for Comet -->
                <scale x="0.1" y="0.1" z="0.1" /> <!-- Comet's Size -->
            </transform>
            <models>
                <model file="../output/bezier_10.3d" /> <!-- Comet Model -->
            </models>
        </group>
    </group>
</world>
